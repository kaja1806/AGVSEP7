@page "/Reports"
@inject NavigationManager NavigationManager

<div class="container mt-4 text-center">
    <h3>Reports</h3>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Quality Analysis Reports</h5>
                <p>This section will contain detailed reports on quality analysis.</p>
                <button class="btn btn-primary" @onclick="ViewQualityAnalysisReport">View Quality Analysis Report</button>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Production Schedule Reports</h5>
                <!-- Placeholder content for Production Schedule Reports -->
                <p>This section will contain reports related to the production schedule.</p>
                <button class="btn btn-primary" @onclick="ViewProductionScheduleReport">View Quality Analysis Report</button>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Sustainability (ESG) Reports</h5>
                <!-- Placeholder content for Sustainability (ESG) Reports -->
                <p>This section will contain reports on environmental, social, and governance aspects.</p>
                <a href="#" class="btn btn-primary">View Sustainability Report</a>
            </div>
        </div>
    </div>
</div>

@code {

    private void ViewQualityAnalysisReport()
    {
        NavigationManager.NavigateTo("/QualityAnalysisReport");
    }

    private void ViewProductionScheduleReport()
    {
        NavigationManager.NavigateTo("/ProductionScheduleReport");
    }

}