@page "/SustainabilityReport"

<h1>Sustainability Report</h1>

<ul class="month-list">
    @foreach (var month in Months)
    {
        <li class="month-item" @onclick="() => ShowReport(month)">@month</li>
    }
</ul>

<div class="report-container">
    @if (!string.IsNullOrEmpty(SelectedReport))
    {
        <div class="report-content">
            <h2>@SelectedMonth Sustainability Report</h2>
            <p>@SelectedReport</p>

            <div class="report-details">
                <ul>
                    <li><strong>Carbon Footprint:</strong> @GetRandomNumber(1, 5) tons CO2</li>
                    <li><strong>Water Usage:</strong> @GetRandomNumber(20, 100) liters</li>
                    <li><strong>ESG Score:</strong> @GetRandomNumber(70, 90)</li>
                    <li><strong>Estimated Energy Consumtpion:</strong>@GetRandomNumber(1,3)</li>
                </ul>
            </div>
        </div>
    }
</div>

@code {
    private readonly List<string> Months = new List<string> { "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December" };

    private string SelectedMonth { get; set; }
    private string SelectedReport { get; set; }

    private void ShowReport(string month)
    {
        SelectedMonth = month;
        SelectedReport = $"Sustainability metrics for {month}";
    }

    private int GetRandomNumber(int min, int max)
    {
        return new Random().Next(min, max + 1);
    }
}

<style>
    .month-list {
        list-style-type: none;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
    }

    .month-item {
        margin: 10px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        cursor: pointer;
    }

    .month-item:hover {
        background-color: #f5f5f5;
    }

    .report-container {
        margin-top: 20px;
    }

    .report-content {
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .report-details {
        margin-top: 15px;
    }
</style>
