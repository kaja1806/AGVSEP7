@page "/ProductionScheduleReport"

<h1>Production Schedule Report</h1>

<ul class="month-list">
    @foreach (var month in Months)
    {
        <li class="month-item" @onclick="() => ShowReport(month)">@month</li>
    }
</ul>

<div class="report-container">
    @if (!string.IsNullOrEmpty(SelectedReport))
    {
        <div class="report-content">
            <h2>@SelectedMonth Production Schedule Report</h2>
            <p>@SelectedReport</p>

            <div class="report-details">
                <ul>
                    <li><strong>Planned Production Quantity:</strong> @GetRandomNumber(5, 20) units</li>
                    <li><strong>Actual Production Quantity:</strong> @GetRandomNumber(3, 18) units</li>
                    <li><strong>Adjustments Made:</strong> @GetRandomNumber(0, 5)</li>
                    <li><strong> Financial savings on process:</strong> @GetRandomNumber(1500, 3000)</li>
                </ul>
            </div>
        </div>
    }
</div>

@code {
    // Dummy data for demonstration
    private readonly List<string> Months = new() { "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December" };

    private string SelectedMonth { get; set; }
    private string SelectedReport { get; set; }

    private void ShowReport(string month)
    {
        SelectedMonth = month;
        SelectedReport = $"Production schedule details for {month}";
    }

    private int GetRandomNumber(int min, int max)
    {
        return new Random().Next(min, max + 1);
    }

}

<style>
    .month-list {
        list-style-type: none;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
    }

    .month-item {
        margin: 10px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        cursor: pointer;
    }

    .month-item:hover {
        background-color: #f5f5f5;
    }

    .report-container {
        margin-top: 20px;
    }

    .report-content {
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .report-details {
        margin-top: 15px;
    }
</style>