@page "/Login"
@inject NavigationManager NavigationManager

<div class="container mt-5">
    <h3 class="mb-4">Login</h3>

    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" id="email" class="form-control" @bind="email" />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password:</label>
        <input type="password" id="password" class="form-control" @bind="password" />
        <span class="text-danger">@errorMessage</span>
    </div>

    <button class="btn btn-primary" @onclick="LoginUser">Log in</button>
</div>

@code {
    private string email;
    private string password;
    private string errorMessage;

    private async Task LoginUser()
    {
        try
        {
    //   authentication logic should be added here
            if (email == "user@company.com" && password == "password123")
            {
    // successful login
                errorMessage = string.Empty;
                NavigationManager.NavigateTo("/"); // Redirect to the main page
            }
            else
            {
    // invalid credentials
                errorMessage = "Invalid email or password";
            }
        }
        catch (Exception e)
        {
    //  other exceptions
            errorMessage = $"Error: {e.Message}";
        }
    }
}